# .env.example — YÉLY BACKEND (Copie en .env et remplis)
# CSCSM Level: Bank Grade — Jamais commiter les vraies valeurs !

NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb+srv://...

# Redis (Rate Limit + GEO drivers)
REDIS_URL=redis://...

# JWT (Minimum 32 caractères chacun, différents !)
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRATION=
JWT_REFRESH_EXPIRATION=

# Frontend
FRONTEND_URL=  # ou ton URL Render/Expo

# Cloudinary
CLOUDINARY_CLOUD_NAME=...
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# LocationIQ (autocomplétion adresses)
LOCATION_IQ_TOKEN=...

# Firebase (Push Notifications futures)
FIREBASE_PROJECT_ID=...
FIREBASE_CLIENT_EMAIL=...
FIREBASE_PRIVATE_KEY=

# Optionnel (déjà géré par défaut)
BCRYPT_ROUNDS=